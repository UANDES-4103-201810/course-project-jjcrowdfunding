<!DOCTYPE html>
<html>
  <head>
    <title>JJCrowdfounding</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>
      <link rel="styleshit" type="text/css" href="mystyle1.css">
      		<nav class="be-red white">
      			

			      <% if user_signed_in? %>
			      	<%= link_to("Sign out", destroy_user_session_path, method: :delete, :class=>'button') %>
              <%= link_to("Projects", projects_path, :class=>'button') %>
              <%= link_to("Edit User", edit_user_registration_path, :class=>"button") %>
              <%= link_to("Wishlist", edit_user_registration_path, :class=>"button") %>

			      <% else %>
			      	<%= link_to "Log In", new_user_session_path,  :class=>'button' %>  
			      <% end %>
            <%= form_tag(searches_path, :method => "get", id: "search-form") do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search" %>
                <%= submit_tag "Search", :name => nil %>
            <% end %>
    <%= yield %>
  </body>
</html>
